doctype html
html
	head
		title Jaicomp's Blog
		
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet', href='front/css/styleBlog.css')

	
	body
		#postContainer
		- console.log(posts);
		- for (post in posts) {
			.post
			img(src='http://ejohn.org/apps/workshop/adv-talk/jquery_logo.png', width='100',height='150')
			ul
				li.tags #{post.tagPost}
			.title #{post.titlePost}
			.author Jaime Crespi
			.date #{post.datePost}
		- }
